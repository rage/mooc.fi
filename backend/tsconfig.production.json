{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "/*": ["./*"]
    },
    "rootDir": ".",
    "lib": ["es2016", "esnext"],
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "noEmit": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "plugins": [{ "name": "nexus/typescript-language-service" }],
    // "typeRoots": ["node_modules/@types", "types"],
    "sourceMap": true,
    "inlineSources": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "sourceRoot": "/"
  },
  "include": [".", "types.d.ts"],
  "exclude": ["__mocks__"]
}