{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "/*": ["./*"]
    },
    "rootDir": ".",
    "lib": ["es2016", "esnext.asynciterable"],
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "graphql/types"
    ],
    "plugins": [{ "name": "nexus/typescript-language-service" }]
  },
  "include": ["."],
  "exclude": ["node_modules", "dist", "test", "src/test"]
}
